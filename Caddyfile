:80 {
    root * /srv
    file_server

    encode gzip zstd

    header {
        X-Frame-Options "DENY"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin"
    }

    @assets {
        path *.css *.js *.png *.jpg *.jpeg *.svg *.woff *.woff2
    }

    header @assets Cache-Control "public, max-age=604800"
}
